{
    {{#fileSet "content/articles/*"}}
    "{{this}}": {
        "template": "post.hbs",
        "data": {
            "article": {
                "filename": "{{this}}",
                "title": "{{front-matter (read this) 'title'}}",
                "author": "{{front-matter (read this) 'author'}}",
                "content": "{{front-matter (read this) '_remainder' true}}",
                "url": "{{urlBuilder this.title}}",
                "image": "{{articleImgSrc this.title}}"
            },
            "rootFolder": "../../../"
        }
    },
    {{/fileSet}}
    "index": {
        "template": "index.hbs",
        "data": {
            "title": "welcome to my site",
            "articles": [
                { "name": "article 1", "url": "whatever.html" }
            ]
        }
    },
    "site": [ "index", "article1" ]
}
